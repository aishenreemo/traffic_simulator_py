# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.{sh,inc,conf}]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
